<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayout">
        <item name="boxBackgroundColor">@color/lightPrimaryColor</item>
        <item name="boxStrokeColor">@color/dividerColor</item>
        <item name="android:textColorHint">@color/textColorPrimary</item>
        <item name="hintTextColor">@color/secondaryText</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/lightPrimaryColor</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Theme.MaterialComponents.Light.NoActionBar.Transparent">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

</resources>
